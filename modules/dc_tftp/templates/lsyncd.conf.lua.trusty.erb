settings {
   logfile = "/var/log/lsyncd/tftp.log",
   statusFile = "/var/run/lsyncd/tftp.status",
   statusInterval = 20
}

sync {
   default.rsync,
   source="<%= @_tftp_dir %>",
   target="<%= @_sync_slave %>.<%= @domain %>:<%= @_tftp_dir %>",
   rsync = {
       archive = true,
       checksum = true,
       compress = true
   }
}

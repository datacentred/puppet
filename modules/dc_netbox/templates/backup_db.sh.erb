#!/bin/bash
user="<%= @_db_user %>"
password="<%= @_db_pass %>"
host="localhost"
db_name="<%= @_db_name %>"
date=$(date +"%d-%b-%Y-%H.%M.%S")
filename=/opt/netbox/db_netbox_backup-$date.sql
pg_dump --dbname=postgresql://$user:$password@127.0.0.1:5432/$db_name > db_netbox_backup-$date.sql
gzip $filename


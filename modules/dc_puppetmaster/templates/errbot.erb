#!/bin/sh

OPTS="-d -c /etc/err"

PIDFILE=/var/lib/err/err.pid
DAEMON=/usr/local/bin/err.py
NAME=err.py
DESC="Errbot"

. /lib/lsb/init-functions

start_daemon() {
  log_begin_msg "Starting $DESC: $NAME"
  start-stop-daemon --start --quiet --pidfile $PIDFILE --exec $DAEMON -- $OPTS
  log_end_msg $?
}

stop_daemon() {
  log_begin_msg "Stopping $DESC: $NAME"
  start-stop-daemon --stop --quiet --oknodo --name $NAME --signal KILL
  log_end_msg $?
  rm -f $PIDFILE
}

case "$1" in
  start)
    start_daemon
    ;;
  stop)
    stop_daemon
    ;;
  restart)
    start_daemon
    stop_daemon
    ;;
  status)
    status_of_proc -p $PIDFILE $DAEMON $NAME && exit 0 || exit $?
    ;;
  *)
    echo "Usage: /etc/init.d/errbot {start|stop|restart|status}" >&2
    exit 1
  ;;
esac


#!/bin/sh

# Check the remote directory is mounted and mount if it's not there
if ! grep -q <%= @juniper_backups %>-remote /proc/mounts
then
    if mount <%= @juniper_backups %>-remote
    then
        rsync -a --delete <%= @juniper_backups %> <%= @juniper_backups %>-remote
    else
        echo "Cannot mount remote directory"
        exit 1
    fi
fi
if ! umount <%= @juniper_backups %>-remote
then
    echo "Cannot unmount remote directory"
    exit 1
fi

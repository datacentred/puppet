{
  "network": {
    "servers": [ "<%= @ls_host %>.<%= @domain %>:<%= @ls_port %>" ],
    "ssl certificate": "/var/lib/puppet/ssl/certs/<%= @fqdn %>.pem",
    "ssl key": "/var/lib/puppet/ssl/private_keys/<%= @fqdn %>.pem",
    "ssl ca": "/var/lib/puppet/ssl/certs/ca.pem",
    "timeout": 15
  },
  "files": [
    {
      "paths": [ "/var/log/apache2/*access.log" ],
      "fields": { "type": "apache" }
    },
    {
      "paths": [ "/var/log/apache2/*error.log" ],
      "fields": { "type": "apache_error" }
    },
    {
      "paths": [ "/var/log/mysql/error.log" ],
      "fields": { "type": "mysql_error" }
    },
    {
      "paths": [ "/var/log/mail.err" ],
      "fields": { "type": "mail_error" }
    }
  ]
}

#!/bin/bash

if grep -q <%= @mountpoint %> /proc/mounts; then
  rsync -rpt --delete /home/<%= @cephdeploy_user %>/bootstrap <%= @mountpoint %>
  rsync -rpt --delete /home/<%= @cephdeploy_user %>/zapped <%= @mountpoint %>
else
  msg='Hello from <%= @fqdn %> my ceph backup mounts seem broken, help!'
  echo $msg | mail -s 'Ceph Key Backup Failure' <%= @sos_address %>
fi


title   "Network errors for <%= @_interface %> on <%= @_hostname %>"
vtitle "Errors/s"
area    :first
hide_legend false
<%
  # Create our hostname string in a format that's consistent with what we're storing in Carbon
  # ༼ つ ◕_◕ ༽つ
  ghostname  = "collectd." + @reversedomain + "." + @_hostname + ".interface-" + @_interface

  rxerrors = ghostname + ".if_errors.rx"
  txerrors = ghostname + ".if_errors.tx"
%>
field :receiving, :color => "green",
               :alias => "Receiving (errors)",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= rxerrors %>),1)"

field :transmitting, :color => "blue",
               :alias => "Transmitting (errors)",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= txerrors %>),1)"

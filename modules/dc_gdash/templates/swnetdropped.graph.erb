title   "Packets Dropped for <%= @_interface %> on <%= @_hostname %>"
vtitle "Packets/s"
area    :first
hide_legend false
<%
  # Create our hostname string in a format that's consistent with what we're storing in Carbon
  # ༼ つ ◕_◕ ༽つ
  ghostname  = "collectd." + @reversedomain + "." + @_hostname + ".snmp.if_dropped." + @_interface

  rxdropped = ghostname + ".rx"
  txdropped = ghostname + ".tx"
%>
field :receiving, :color => "green",
               :alias => "Receiving (dropped)",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= rxdropped %>),1)"

field :transmitting, :color => "blue",
               :alias => "Transmitting (dropped)",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= txdropped %>),1)"

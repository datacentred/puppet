title   "Disk Throughput for <%= @disk %> on <%= @_hostname %>"
vtitle   "Bytes/s"
area    :first
hide_legend false
<%
  # Create our hostname string in a format that's consistent with what we're storing in Carbon
  # ༼ つ ◕_◕ ༽つ
    ghostname  = (@_hostname + "." + @domain).gsub(/\./, '_')
  # Handle the naming in collectd for HP blade raid arrays
    if @disk =~ /^c0d0/
        writes = "collectd." + ghostname + ".disk-cciss_" + @disk + ".disk_octets.write"
        reads = "collectd." + ghostname + ".disk-cciss_" + @disk + ".disk_octets.read"
    else
        writes = "collectd." + ghostname + ".disk-" + @disk + ".disk_octets.write"
        reads = "collectd." + ghostname + ".disk-" + @disk + ".disk_octets.read"
    end
%>
field :Written, :color => "green",
               :alias => "Writes",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= writes %>),1)"

field :Read, :color => "blue",
               :alias => "Reads",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= reads %>),1)"

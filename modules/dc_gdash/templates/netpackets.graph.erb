title   "Network interface <%= @_interface %> traffic on <%= @_hostname %>"
vtitle "Packets/s"
area    :first
hide_legend false
<%
  # Create our hostname string in a format that's consistent with what we're storing in Carbon
  # ༼ つ ◕_◕ ༽つ
  ghostname  = "collectd." + @reversedomain + "." + @_hostname + ".interface." + @_interface
  
  rxpackets = ghostname + ".if_octets.rx"
  txpackets = ghostname + ".if_octets.tx"
 
%>
field :receiving, :color => "green",
               :alias => "Receiving (bps)",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= rxpackets %>),1)"

field :transmitting, :color => "blue",
               :alias => "Transmitting (bps)",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= txpackets %>),1)"

title   "Network interface <%= @interface %> traffic on <%= @hostname %>"
area    :first
hide_legend false
<%
  hostname  = (@hostname + "." + @domain).gsub(/\./, '_') 
  rxpackets = "collectd." + hostname + ".interface-" + @interface + ".if_octets.rx"
  txpackets = "collectd." + hostname + ".interface-" + @interface + ".if_octets.tx"
%>
field :receiving, :color => "green",
               :alias => "Receiving (bps)",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= rxpackets %>),1)"

field :transmitting, :color => "blue",
               :alias => "Transmitting (bps)",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= txpackets %>),1)"

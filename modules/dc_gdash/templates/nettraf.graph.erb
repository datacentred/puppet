title   "Network interface <%= @_interface %> traffic on <%= @_hostname %>"
vtitle "Bits/s"
area    :first
hide_legend false
<%
  # Create our hostname string in a format that's consistent with what we're storing in Carbon
  # ༼ つ ◕_◕ ༽つ
  reversedomain = join(reverse(split(@domain, '.'),'.')
  ghostname  = reversedomain + "." + @_hostname

  rxoctets = "collectd." + ghostname + ".interface-" + @_interface + ".if_octets.rx"
  txoctets = "collectd." + ghostname + ".interface-" + @_interface + ".if_octets.tx"
%>
field :receiving, :color => "green",
               :alias => "Receiving (bps)",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= rxoctets %>),1)"

field :transmitting, :color => "blue",
               :alias => "Transmitting (bps)",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= txoctets %>),1)"

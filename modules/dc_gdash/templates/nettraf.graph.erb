title   "Network interface traffic on <%= @hostname %>"
area    :first
hide_legend false

<%- @interfaces.each do |i| %>

<%-
  rxpackets = "collectd.#{@hostname}_sal01_datacentred_co_uk.interface-#{i}.if_packets.tx"
  txpackets = "collectd.#{@hostname}_sal01_datacentred_co_uk.interface-#{i}.if_packets.tx"
-%>

field :receiving, :color => "green",
               :alias => "Receiving",
               :data  => "<%= rxpackets %>"

field :transmitting, :color => "blue",
               :alias => "Transmiting",
               :data  => "<%= txpackets %>"
<%- end %>

title       "Load"
area        :none
description "The combined CPU usage for <%= @hostname %>"
hide_legend false

field :short, :color => "red",
               :alias => "Short term (1 minute)",
               :data  => "collectd.<%= @hostname %>_sal01_datacentred_co_uk.load.load.shortterm"

field :mid, :color => "orange",
               :alias => "Mid term (5 minutes)",
               :data  => "collectd.<%= @hostname %>_sal01_datacentred_co_uk.load.load.midterm"

field :long, :color => "yellow",
             :alias => "Long term (15 minutes)",
             :data  => "collectd.<%= @hostname %>_sal01_datacentred_co_uk.load.load.longterm"


title       "Load"
vtitle "System Load"
area        :none
description "The combined CPU usage for <%= @_hostname %>"
hide_legend false
<%
  # Create our hostname string in a format that's consistent with what we're storing in Carbon
  ghostname  = "collectd." + @reversedomain + "." + @_hostname
  loadshort = ghostname + ".load.load.shortterm"
  loadmid   = ghostname + ".load.load.midterm"
  loadlong  = ghostname + ".load.load.longterm" 
%>
field :short, :color => "red",
               :alias => "Short term (1 minute)",
               :data  => "<%= loadshort %>"

field :mid, :color => "orange",
               :alias => "Mid term (5 minutes)",
               :data  => "<%= loadmid %>"

field :long, :color => "yellow",
             :alias => "Long term (15 minutes)",
             :data  => "<%= loadlong %>"

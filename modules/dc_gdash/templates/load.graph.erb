title       "Load"
area        :none
description "The combined CPU usage for <%= @hostname %>"
hide_legend false
<%
  hostname  = (@hostname + "." + @domain).gsub(/\./, '_')  
  loadshort = "collectd." + hostname + ".load.load.shortterm"
  loadmid   = "collectd." + hostname + ".load.load.midterm"
  loadlong  = "collectd." + hostname + ".load.load.longterm" 
%>
field :short, :color => "red",
               :alias => "Short term (1 minute)",
               :data  => "<%= loadshort %>"

field :mid, :color => "orange",
               :alias => "Mid term (5 minutes)",
               :data  => "<%= loadmid %>"

field :long, :color => "yellow",
             :alias => "Long term (15 minutes)",
             :data  => "<%= loadlong %>"

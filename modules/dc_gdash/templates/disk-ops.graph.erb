title   "Disk Ops for <%= @disk %> on <%= @_hostname %>"
vtitle   "Ops/s"
area    :first
hide_legend false
<%
  # Create our hostname string in a format that's consistent with what we're storing in Carbon
    # ༼ つ ◕_◕ ༽つ
    # Handle the naming in collectd for HP blade raid arrays

    if @disk =~ /^c0d0/
        ghostname  = "collectd." + @reversedomain + "." + @_hostname + ".disk-cciss_" + @disk
    else
        ghostname  = "collectd." + @reversedomain + "." + @_hostname + ".disk-" + @disk
    end

    writes = ghostname + ".disk_ops.write"
    reads = ghostname + ".disk_ops.read"
%>
field :Written, :color => "green",
               :alias => "Writes",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= writes %>),1)"

field :Read, :color => "blue",
               :alias => "Reads",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= reads %>),1)"

title   "Disk Ops for <%= @disk %> on <%= @_hostname %>"
vtitle   "Ops/s"
area    :first
hide_legend false
<%
  # Create our hostname string in a format that's consistent with what we're storing in Carbon
  # ༼ つ ◕_◕ ༽つ
    reversedomain = join(reverse(split(@domain, '.'),'.')
    ghostname  = reversedomain + "." + @_hostname

# Handle the naming in collectd for HP blade raid arrays
    if @disk =~ /^c0d0/
        writes = "collectd." + ghostname + ".disk-cciss_" + @disk + ".disk_ops.write"
        reads = "collectd." + ghostname + ".disk-cciss_" + @disk + ".disk_ops.read"
    else
        writes = "collectd." + ghostname + ".disk-" + @disk + ".disk_ops.write"
        reads = "collectd." + ghostname + ".disk-" + @disk + ".disk_ops.read"
    end
%>
field :Written, :color => "green",
               :alias => "Writes",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= writes %>),1)"

field :Read, :color => "blue",
               :alias => "Reads",
               :data  => "scaleToSeconds(nonNegativeDerivative(<%= reads %>),1)"

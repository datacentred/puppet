settings {
  logfile = '/var/log/lsyncd/puppet.log',
  statusFile = '/var/lib/lsyncd/puppetcrl.status',
}

<% @targets.each do |target| -%>
sync {
  default.rsyncssh,
  source = "<%= @_ssldir %>",
  host = "<%= target %>",
  targetdir = "<%= @_ssldir %>",
  delete = false,
  <% if @excludes -%>
  exclude = { <%= Array(@excludes).map{|x| %Q/"#{x}"/}.join(', ') %> },
  <% end -%>
  rsync = {
    archive = true,
    checksum = true,
    compress = true,
  }
}
<% end -%>

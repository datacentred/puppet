---
# Enable TFTP management
# :tftproot: /var/lib/tftpboot
# Defines the TFTP Servername to use, overrides the name in the subnet declaration
# :tftp_servername: tftp.domain.com
<% if @use_tftp == true -%>
:tftproot: <%= scope.lookupvar('dc_tftp::tftp_dir') %>
:enabled: true
<% else %>
:enabled: false
<% end -%>

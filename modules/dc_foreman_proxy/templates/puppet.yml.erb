---
# enable Puppet management
# :puppet_conf: /etc/puppet/puppet.conf
<% if @use_puppet -%>
:puppet_conf: /etc/puppet/puppet.conf
# Pupper API support is seemingly broken somewhere with a:
#   Failed to list puppet environments: SSL_connect returned=1 errno=0 state=unknown state: unknown protocol
# which I don't have the time or patience to fix - SM
:puppet_use_environment_api: false
:enabled: https
<% else -%>
:enabled: false
<% end -%>
